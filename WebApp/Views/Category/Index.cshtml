@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row p-3">
        <div class="col-6">
            <h1 class="text-primary">List of category</h1>
            </div>
        <div class="col-6" style="text-align:right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>&nbsp; Add Category </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table  class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                       Name
                    </th>
                    <th>
                        Display order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var x in Model){
                <tr>
                    <th width="50%">@x.Name</th>
                    <th width="30%">@x.DisplayOrder</th>
                    <th class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-Id="@x.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen"></i></a>
                            <a asp-action="Delete" asp-route-Id="@x.Id" class="btn btn-danger mx-2"><i class="fa-sharp fa-solid fa-trash"></i> </a>
                        </div>
                    </th>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Category no exists.</p>
    }
</div>